<% layout("layouts/boilerplate.ejs") %>
<body>
    <div class="container mt-3">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <h3 class="text-center mb-4">Edit Your StayVerse Listing</h3>
                <form method="POST" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label mb-0">Title</label>
                        <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control" required>
                        <div class="invalid-feedback">Title is required</div>
                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label mb-0">Description</label>
                        <textarea name="listing[description]" class="form-control" required><%= listing.description %></textarea>
                        <div class="invalid-feedback">Please add a description</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label mb-1">Original Image</label><br>
                        <img src="<%= originalImageUrl  %>" alt="Original Image" class="img-thumbnail mb-3 mt-1" style="max-width: 150px; height: auto;">
                    </div>

                    <div class="mb-3">
                        <label for="image" class="form-label mb-0">Choose File</label>
                        <input type="file" name="listing[image]" class="form-control">
                        <div class="invalid-feedback">Image is required</div>
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-6">
                            <label for="price" class="form-label mb-0">Price</label>
                            <input type="number" value="<%= listing.price %>" name="listing[price]" class="form-control" required>
                            <div class="invalid-feedback">Price is required</div>
                        </div>
                        <div class="mb-3 col-md-6">
                            <label for="country" class="form-label mb-0">Country</label>
                            <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control" required>
                            <div class="invalid-feedback">Country is required</div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="location" class="form-label mb-0">Location</label>
                        <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control" required>
                        <div class="invalid-feedback">Location is required</div>
                    </div>

                    <div class="mb-3">
                        <label for="category" class="form-label mb-0">Category</label>
                        <select name="listing[category]" class="form-select">
                            <option value="" selected disabled><%= listing.category %></option>
                            <option value="apartment">Apartment</option>
                            <option value="house">House</option>
                            <option value="cottage">Cottage</option>
                            <option value="villa">Villa</option>
                            <option value="bungalow">Bungalow</option>
                            <option value="chalet">Chalet</option>
                            <option value="beach house">Beach House</option>
                        </select>
                        <div class="invalid-feedback">Category is required</div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-dark edit-btn mt-3 mb-5 w-100">Edit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
