<% layout("layouts/boilerplate.ejs") %>
<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = <%- JSON.stringify(listing) %>;
</script>
<body class="bg-light">
    <div class="invisible-container bg-light col-8 offset-2">
        <!-- Title -->
        <div class="mb-4">
            <h3 class="fw-semibold display-6.5"><%= listing.title %></h3>
        </div>

        <!-- Main Image -->
        <img src="<%= listing.image.url %>" class="card-img-top show-img rounded mb-3" alt="Listing_image">

        <!-- Listing Details -->
        <div class="mb-4">
            <p class="mb-1 card-text">Owned by <i><%= listing.owner.username%></i></p>
            <p class="fs-5 mb-1 card-text"><%= listing.description %></p>
            <p class="mb-1 card-text">&#x20b9; <%= listing.price.toLocaleString("en-IN") %></p>
            <p class="mb-1 card-text"><%= listing.location %></p>
            <p class="card-text"><%= listing.country %></p>
        </div>

<!-- Admin Controls -->
<% if(currentUser && currentUser._id.equals(listing.owner._id)) { %>
    <div class="d-flex flex-column flex-md-row gap-3 mb-5">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark px-4">Edit</a>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
            <button class="btn btn-dark px-4 mt-2 mt-md-0">Delete</button>
        </form>
    </div>
<% } %>

<!-- Booking Button -->
<div class="d-flex flex-column flex-md-row gap-3 mb-5">
    <% if(currentUser) { %>
        <a href="/payments/checkout/<%= listing._id %>" class="btn btn-primary px-4 mt-2 mt-md-0">Book Now</a>
    <% } else { %>
        <a href="/login" class="btn btn-primary px-4 mt-2 mt-md-0">Book</a>
    <% } %>
</div>
<hr>

        

        <!-- Leave a Review Section -->
        <% if (currentUser) { %>
        <div class="mt-5 mb-4">
            <h4 class="mb-3">Leave a review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked 
                            aria-label="No rating." />
                    <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                    <label for="first-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                    <label for="first-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                    <label for="first-rate3" title="Average">3 stars</label>
                    <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                    <label for="first-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                    <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
                </div>
                <div class="mb-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea id="comment" name="review[comment]" cols="30" rows="4" class="form-control" required></textarea>
                    <div class="invalid-feedback">Please add a comment</div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
        </div>
        <% } %>
        <hr>


        <!-- All Reviews Section -->
        <div class="row">
            <% for (let review of listing.reviews) { %>
                <h4 class="mb-4">All Reviews</h4>
                <div class="col-md-6 mb-4">
                    <div class="p-3 bg-white rounded shadow-sm h-100">
                        <h6 class="text-muted">@<%= review.author.username %></h6>
                        <p class="starability-result" data-rating="<%= review.rating %>"></p>
                        <p class="mb-1"><%= review.comment %></p>
                        <form method="POST" action="/listings/<%= listing.id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-sm btn-dark mt-2">Delete</button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
        <div>
            <h3>Where you'll be</h3>
            <div id="map"></div>
            <script src="/js/map.js"></script>
        </div>
    </div>
</body>
